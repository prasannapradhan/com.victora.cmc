<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns:l="sap.ui.layout"
    controllerName="com.victora.cmc.uix.controller.CustomerListing"
>
    <App>
        <Page title="Duplicate Customer Groups">
            <content>
                <VBox>
                    <!-- Enhanced Toolbar -->
                    <Toolbar class="sapUiSmallMarginBottom sapUiResponsivePadding sapUiTinyMarginTop sapUiTinyMarginBegin sapUiTinyMarginEnd">
                        <!-- Filter Dropdown -->
                        <Select
                            id="filterSelect"
                            width="12rem"
                            change="onFilterChange"
                            class="sapUiSmallMarginEnd"
                        >
                            <items>
                                <core:Item key="All" text="All Customers" />
                                <core:Item key="National" text="National (India)" />
                                <core:Item key="International" text="International" />
                            </items>
                        </Select>

                        <!-- Group Count -->
                        <ObjectStatus
                            class="sapUiTinyMarginEnd"
                            text="{vcfg>/groupCountText}"
                            state="Warning"
                            inverted="true"
                        />

                        <!-- Customer Count -->
                        <ObjectStatus
                            class="sapUiTinyMarginEnd"
                            text="{vcfg>/customerCountText}"
                            state="Warning"
                            inverted="true"
                        />

                        <!-- Threshold Input -->
                        <Text text="Similarity"  class="sapUiTinyMarginEnd" />
                        <Input
                            width="4rem"
                            value="{vcfg>/threshold}"
                            type="Text"
                            placeholder="Threshold"
                            class="sapUiTinyMarginEnd"
                            change="handleCustomerThresholdChange"
                            textAlign="Center"
                        />

                        <!-- Apply Button -->
                        <Button
                            text="Apply"
                            press="handleCustomerThresholdChange"
                            type="Emphasized"
                            class="sapUiTinyMarginEnd"
                        />

                        <!-- Spacer -->
                        <ToolbarSpacer />

                        <!-- Download All Button -->
                     <HBox alignItems="Center" 
                        class="sapUiResponsivePadding sapUiTinyMargin">
                            <!-- Download All Button -->
                            <Button
                                icon="sap-icon://download"
                                text="Download All"
                                press="downloadAllCustomers"
                                type="Emphasized"
                                class="sapUiSmallMarginEnd"
                            />
                        
                            <!-- Download Group Button -->
                            <Button
                                icon="sap-icon://download"
                                text="Download Group"
                                press=".downloadGroupCustomers"
                                type="Emphasized"
                                class="sapUiSmallMarginEnd"
                            />
                        
                            <!-- Vendor Button -->
                            <Button
                                icon="sap-icon://switch-views"
                                text="Vendor"
                                press="onCustomerPage"
                                type="Attention"
                                class="sapUiSmallMarginEnd"
                            />

                            <Button
                                icon="sap-icon://switch-views"
                                text="Meterial"
                                press="onMeterialPage"
                                type="Attention"
                                class="sapUiSmallMarginEnd"
                            />
                        </HBox>
                    </Toolbar>

                    <!-- FlexBox for List and Table -->
                    <FlexBox
                        direction="Row"
                        justifyContent="Start"
                        fitContainer="true"
                    >
                        <!-- Suspect List -->
                        <ScrollContainer
                            width="20rem"
                            height="84vh"
                            vertical="true"
                        >
                            <List
                                id="suspectList"
                                items="{cmc>/suspects}"
                                mode="SingleSelectMaster"
                                selectionChange="onSelectionChange"
                                growing="false"
                            >
                                <StandardListItem title="{cmc>displayKey}" />
                            </List>
                        </ScrollContainer>

                        <!-- Suspect Details Table -->
                        <table:Table
                            id="suspectDetailsTable"
                            rows="{details>/selectedSuspects}"
                            selectionMode="None"
                            width="auto"
                        >
                            <table:columns>
                                <table:Column width="6rem">
                                    <Label text="Match Group" />
                                    <table:template>
                                        <l:HorizontalLayout>
                                            <l:content>
                                                <Text
                                                    text="{details>MatchGroup}"
                                                    class="boldText"
                                                    visible="{= !${details>Duplicate}}"
                                                />
                                                <ObjectStatus
                                                    class="sapUiSmallPadding sapUiSmallMargin"
                                                    text="{details>MatchGroup}"
                                                    state="Success"
                                                    visible="{= ${details>Duplicate}}"
                                                    inverted="true"
                                                />
                                            </l:content>
                                        </l:HorizontalLayout>
                                    </table:template>
                                </table:Column>

                                <table:Column width="auto">
                                    <Label text="Address" />
                                    <table:template>
                                        <Text text="{details>Address}" />
                                    </table:template>
                                </table:Column>

                                <table:Column width="8rem">
                                    <Label text="Customer ID" />
                                    <table:template>
                                        <Text text="{details>CustomerId}" />
                                    </table:template>
                                </table:Column>

                                <table:Column width="18rem">
                                    <Label text="Name" />
                                    <table:template>
                                        <Text text="{details>Name}" />
                                    </table:template>
                                </table:Column>

                                <table:Column width="5rem">
                                    <Label text="Region" />
                                    <table:template>
                                        <Text text="{details>Region}" />
                                    </table:template>
                                </table:Column>
                            </table:columns>
                        </table:Table>
                    </FlexBox>
                </VBox>
            </content>
        </Page>
    </App>
</mvc:View>