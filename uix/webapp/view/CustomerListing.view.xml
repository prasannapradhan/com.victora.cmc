<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="com.victora.cmc.uix.controller.CustomerListing"
>   
    <App>
        <Page title="Duplicate Customer Groups">
            <content>
                <VBox>
                    <Toolbar>
                        <!-- Dropdown Filter -->
                        <Select id="filterSelect" change="onFilterChange">
                            <items>
                                <core:Item key="All" text="All Customers"/>
                                <core:Item key="National" text="National (India)"/>
                                <core:Item key="International" text="International"/>
                            </items>
                        </Select>
                        
                        <ToolbarSpacer/>
                    
                        <!-- Input Field for Percentage -->
                        <Input id="percentageInput" placeholder="Enter %"  width="10rem"/>
                    
                        <!-- Go Button -->
                        <Button text="Go" press="onGoPress"/>
                    
                        <ToolbarSpacer/>
                    
                        <Button text="Vendor" press="onCustomerPage"/>
                    </Toolbar>
                    
                    
                    <FlexBox direction="Row" justifyContent="Start" fitContainer="true">
                        <!-- Suspect List -->
                        <ScrollContainer width="22rem" height="84vh" vertical="true">
                            <List
                                id="suspectList"
                                items="{cmc>/suspects}"
                                mode="SingleSelectMaster"
                                selectionChange="onSelectionChange"
                                growing="true"
                                growingThreshold="50"
                                growingScrollToLoad="true"
                            >
                                <StandardListItem title="{cmc>displayKey}"/>
                            </List>
                        </ScrollContainer>
                        
                        <!-- Suspect Details Table -->
                        <table:Table
                            id="suspectDetailsTable"
                            rows="{details>/selectedSuspects}"
                            selectionMode="None"
                            width="auto"
                        >
                            <table:columns>
                                <table:Column width="6rem">
                                    <Label text="Match (%)"/>
                                    <table:template>
                                        <Text text="{details>MatchGroup}" class="boldText"/>
                                    </table:template>
                                </table:Column>

                                <table:Column width="auto">
                                    <Label text="Address"/>
                                    <table:template>
                                        <Text text="{details>Address}"/>
                                    </table:template>
                                </table:Column>
                                <table:Column width="8rem">
                                    <Label text="Customer ID"/>
                                    <table:template>
                                        <Text text="{details>CustomerId}"/>
                                    </table:template>
                                </table:Column>
                                
                                <table:Column width="18rem">
                                    <Label text="Name"/>
                                    <table:template>
                                        <Text text="{details>Name}"/>
                                    </table:template>
                                </table:Column>


                                <table:Column width="5rem">
                                    <Label text="Region"/>
                                    <table:template>
                                        <Text text="{details>Region}"/>
                                    </table:template>
                                </table:Column>
                            </table:columns>
                        </table:Table>
                    </FlexBox>
                </VBox>
            </content>
        </Page>
    </App>
</mvc:View>
