<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns:l="sap.ui.layout"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="com.victora.cmc.uix.controller.CustomerListing"
>
    <App>
        <Page title="Duplicate Customer Groups">
            <content>
                <VBox>
                   
                    <Toolbar class="sapUiSmallPadding sapUiSmallMargin">
                    
                        <Select id="filterSelect" change="onFilterChange">
                            <items>
                                <core:Item key="All" text="All Customers"/>
                                <core:Item key="National" text="National (India)"/>
                                <core:Item key="International" text="International"/>
                            </items>
                        </Select>
                        
                        <Text class="sapUiTinyMarginBegin sapUiTinyMarginEnd" 
                            text="{vcfg>/groupCountText}" width="auto" />

                        <Text class="sapUiTinyMarginBegin sapUiTinyMarginEnd" 
                            text="{vcfg>/customerCountText}" width="auto" />
                        
                        <Input 
                            width="4rem" 
                            value="{vcfg>/threshold}"
                            type="Text"
                            change="handleCustomerThresholdChange"
                            />
                        <Button 
                            text="Apply" 
                            press="handleCustomerThresholdChange" 
                            type="Emphasized"
                            />
                        <ToolbarSpacer/>
                        <Button text="Vendor" press="onCustomerPage" type="Emphasized"/>

                    </Toolbar>
                
                    <FlexBox
                        direction="Row"
                        justifyContent="Start"
                        fitContainer="true"
                    >
                        <!-- Suspect List -->
                        <ScrollContainer
                            width="20rem"
                            height="84vh"
                            vertical="true"
                      >
                            <List
                                id="suspectList"
                                items="{cmc>/suspects}"
                                mode="SingleSelectMaster"
                                selectionChange="onSelectionChange"
                                growing="false"
                            >
                                <StandardListItem title="{cmc>displayKey}" />
                            </List>
                        </ScrollContainer>

                        <!-- Suspect Details Table -->
                        <table:Table
                            id="suspectDetailsTable"
                            rows="{details>/selectedSuspects}"
                            selectionMode="None"
                            width="auto"
                        >
                            <table:columns>
                                <table:Column width="6rem">
                                    <Label text="Match (%)" />
                                    <table:template>
                                        <l:HorizontalLayout>
                                            <l:content>
                                                <Text
                                                    text="{details>MatchGroup}"
                                                    class="boldText"
                                                    visible="{= !${details>Duplicate}}"
                                                />
                                                <ObjectStatus 
                                                    class="sapUiSmallPadding sapUiSmallMargin"
                                                    text="{details>MatchGroup}" 
                                                    state="Success"
                                                    visible="{= ${details>Duplicate}}"
                                                    inverted="true"
                        						/>
                                            </l:content>
                                        </l:HorizontalLayout>
                                    </table:template>
                                </table:Column>

                                <table:Column width="auto">
                                    <Label text="Address" />
                                    <table:template>
                                        <Text text="{details>StreetAdd}" />
                                    </table:template>
                                </table:Column>

                                <table:Column width="8rem">
                                    <Label text="Customer ID" />
                                    <table:template>
                                        <Text text="{details>CustomerId}" />
                                    </table:template>
                                </table:Column>

                                <table:Column width="18rem">
                                    <Label text="Name" />
                                    <table:template>
                                        <Text text="{details>Name}" />
                                    </table:template>
                                </table:Column>

                                <table:Column width="5rem">
                                    <Label text="Region" />
                                    <table:template>
                                        <Text text="{details>Region}" />
                                    </table:template>
                                </table:Column>
                            </table:columns>
                        </table:Table>
                    </FlexBox>
                </VBox>
            </content>
        </Page>
    </App>
</mvc:View>
